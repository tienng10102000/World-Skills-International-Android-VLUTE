<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Module3"
    android:orientation="vertical">

    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/textView5"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT ASSET"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Asset name:"
                android:textStyle="bold"
                android:textSize="14sp">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ass_name"
                android:layout_marginTop="10dp"
                android:textSize="18dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination Department:"
                android:textStyle="bold"
                android:textSize="14sp">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cur_dep"
                android:layout_marginTop="10dp"
                android:textSize="18dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Asset SN:"
        android:textStyle="bold"
        android:textSize="14sp">
    </TextView>

    <TextView
        android:id="@+id/tv_ass_sn"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp">
    </TextView>

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Department:"
        android:textStyle="bold"
        android:textSize="14sp">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">
        <Spinner
            android:id="@+id/sp_des_dep"
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="5dp">
        </Spinner>
        <Spinner
            android:layout_marginLeft="15dp"
            android:id="@+id/sp_des_loc"
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:layout_marginTop="5dp" >
        </Spinner>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:text="New Asset SN:"
        android:textSize="18sp"/>

    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/tv_ass_sn_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></View>

        <TextView
            android:id="@+id/tv_move_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:text="SUBMIT"
            android:textColor="#0837C3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_move_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom|right"
            android:text="CANCEL"
            android:textColor="#0837C3"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>